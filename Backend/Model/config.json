{
    "name": "Music_LSTM",
    "n_gpu": 1,

    "model": {
        "name": "MidiLSTM",
        "args": {
            "vocab_size": 14,
            "embed_size":10,
            "hidden_size": 64,
            "num_layers": 1
        }
    },
    "data_loader": {
        "name": "MidiDataLoader",
        "args":{
            "data_path": "data/out.pkl",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers":2
        }
    },
    "collate_fn": "midi_collate_fn",
    "test_data_loader": {
        "name": "MidiDataLoader",
        "args":{
            "data_path": "data/out.pkl",
            "batch_size": 128,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "test_collate_fn": "midi_collate_fn",
    "optimizer": {
        "name": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "midi_loss",
    "metrics": [
        "melody_accuracy", "melody_accuracy_topk", "chord_multilabel_accuracy",
        "chord_average_precision", "chord_auc"
    ],
    "lr_scheduler": {
        "name": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
