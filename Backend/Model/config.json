{
    "name": "Music_LSTM",
    "n_gpu": 1,

    "model": {
        "name": "LSTM",
        "args": {
            "input_size": 1,
            "hidden_size": 2,
            "num_layers": 2
        }
    },
    "data_loader": {
        "name": "MusicDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "val_data_loader": {
        "name": "MusicDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "name": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "name": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
